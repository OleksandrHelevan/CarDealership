<Window x:Class="CarDealership.window.AdminWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="AdminWindow"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized">

    <Window.Resources>
        <Style x:Key="RoundedButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#3B82F6" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Padding" Value="12,6" />
            <Setter Property="Margin" Value="10,8" />
            <Setter Property="FontSize" Value="16" />
            <Setter Property="Width" Value="240" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                CornerRadius="14"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#60A5FA" />
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#1E40AF" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10">
            <Button Name="BtnAddOperator"
                    Content="Додати оператора"
                    Style="{StaticResource RoundedButtonStyle}"
                    Click="BtnAddOperator_Click"/>

            <Button Name="BtnSqlCommands"
                    Content="SQL команди"
                    Style="{StaticResource RoundedButtonStyle}" />

            <Button Name="BtnCommandPrompt"
                    Content="Командний рядок"
                    Style="{StaticResource RoundedButtonStyle}" />
            
            <Button Name="BtnMyAccount"
                    Content="Мій акаунт"
                    Style="{StaticResource RoundedButtonStyle}"
                    Click="BtnMyAccount_Click" />
        </StackPanel>
        <Frame x:Name="MainFrame"
               Grid.Row="1"
               NavigationUIVisibility="Hidden"
               Background="White"
               Margin="20"
               HorizontalAlignment="Stretch"
               VerticalAlignment="Stretch" />
        
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10">
           
            <Button Name="BtnAddGasolineCar"
                    Content="Додати бензинове авто"
                    Style="{StaticResource RoundedButtonStyle}" 
                    Click="BtnAddGasolineCar_Click"/>

            <Button Name="BtnAddElectroCar"
                    Content="Додати електромобіль"
                    Style="{StaticResource RoundedButtonStyle}" 
                    Click="BtnAddElectroCar_Click"/>

            <Button Name="BtnPutOnSale"
                    Content="Виставити авто на продаж"
                    Style="{StaticResource RoundedButtonStyle}" 
                    Click="BtnUnboundCars_Click"/>
            
            <Button Name="BtnShowRequest"
                    Content="Запити на авторизацію"
                    Style="{StaticResource RoundedButtonStyle}"
                    Click="BtnShowRequest_Click" />
            
            <Button Name="BtnEditProduct"
                    Content="Продукти"
                    Style="{StaticResource RoundedButtonStyle}"
                    Click="BtnEditProduct_Click" />
            

        </StackPanel>
       
    </Grid>
</Window>
