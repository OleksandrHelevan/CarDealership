<Window x:Class="CarDealership.window.RegisterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Реєстрація" Height="450" Width="400" WindowStartupLocation="CenterScreen">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="First Name:" Grid.Row="0"/>
        <TextBox x:Name="FirstNameBox" Grid.Row="0" Margin="120,0,0,0"/>

        <TextBlock Text="Last Name:" Grid.Row="1"/>
        <TextBox x:Name="LastNameBox" Grid.Row="1" Margin="120,0,0,0"/>

        <TextBlock Text="Passport ID:" Grid.Row="2"/>
        <TextBox x:Name="PassportIdBox" Grid.Row="2" Margin="120,0,0,0"/>

        <TextBlock Text="Passport Data:" Grid.Row="3"/>
        <TextBox x:Name="PassportDataBox" Grid.Row="3" Margin="120,0,0,0"/>

        <TextBlock Text="Login:" Grid.Row="4"/>
        <TextBox x:Name="LoginBox" Grid.Row="4" Margin="120,0,0,0"/>

        <TextBlock Text="Password:" Grid.Row="5"/>
        <PasswordBox x:Name="PasswordBox" Grid.Row="5" Margin="120,0,0,0"/>

        <TextBlock Text="Confirm Password:" Grid.Row="6"/>
        <PasswordBox x:Name="ConfirmPasswordBox" Grid.Row="6" Margin="120,0,0,0"/>

        <Button Content="Register" Grid.Row="7" Margin="0,20,0,0" Height="40"
                Background="#3B82F6" Foreground="White"
                Click="Register_Click"/>
    </Grid>
</Window>