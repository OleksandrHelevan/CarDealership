<Window x:Class="CarDealership.ResetPasswordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Скидання пароля" Height="200" Width="400" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Новий пароль:" Grid.Row="0" VerticalAlignment="Center"/>
        <PasswordBox x:Name="NewPasswordBox" Grid.Row="0" Margin="120,0,0,0" Width="200"/>

        <TextBlock Text="Підтвердження пароля:" Grid.Row="1" VerticalAlignment="Center" Margin="0,10,0,0"/>
        <PasswordBox x:Name="ConfirmPasswordBox" Grid.Row="1" Margin="120,10,0,0" Width="200"/>

        <Button Content="Оновити пароль" Grid.Row="3" Width="150" HorizontalAlignment="Center" Click="UpdatePassword_Click"/>
    </Grid>
</Window>