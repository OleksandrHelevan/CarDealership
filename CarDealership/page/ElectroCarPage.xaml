<Page x:Class="CarDealership.page.ElectroCarPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:CarDealership.page"
      xmlns:model="clr-namespace:CarDealership.dto"
      mc:Ignorable="d"
      Title="ElectroCarPage">

    <ScrollViewer VerticalScrollBarVisibility="Auto" Background="#f7f7f7">
        <ItemsControl x:Name="ElectroCarsList">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapPanel />
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>

            <ItemsControl.ItemTemplate>
                <DataTemplate DataType="{x:Type model:ElectroCarDto}">
                    <Border BorderBrush="Gray" BorderThickness="1" CornerRadius="10" Margin="10" Padding="15" Background="#F5F5F5" Width="300">
                        <StackPanel>
                            <TextBlock Text="Електромобіль" FontSize="16" FontWeight="Bold" Margin="0 0 0 10"/>
            
                            <TextBlock Text="{Binding Brand, StringFormat=Марка: {0}}" Margin="0 2"/>
                            <TextBlock Text="{Binding ModelName, StringFormat=Модель: {0}}" Margin="0 2"/>
                            <TextBlock Text="{Binding Year, StringFormat=Рік: {0}}" Margin="0 2"/>

                            <TextBlock Text="{Binding Engine.BatteryCapacity, StringFormat=Ємність батареї: {0} кВт/год}" Margin="0 2"/>
                            <TextBlock Text="{Binding Engine.HorsePower, StringFormat=Потужність: {0} к.с.}" Margin="0 2"/>
                            <TextBlock Text="{Binding Engine.Range, StringFormat=Запас ходу: {0} км}" Margin="0 2"/>
                            <TextBlock Text="{Binding Engine.ElectroMotorTypeString, StringFormat=Тип мотора: {0}}" Margin="0 2"/>

                            <TextBlock Text="{Binding ColorString, StringFormat=Колір: {0}}" Margin="0 2"/>
                            <TextBlock Text="{Binding Mileage, StringFormat=Пробіг: {0} км}" Margin="0 2"/>
                            <TextBlock Text="{Binding Price, StringFormat=Ціна: ${0}}" Margin="0 2"/>
                            <TextBlock Text="{Binding Weight, StringFormat=Вага: {0} кг}" Margin="0 2"/>
                            <TextBlock Text="{Binding TransmissionString, StringFormat=КПП: {0}}" Margin="0 2"/>
                            <TextBlock Text="{Binding DriveTypeString, StringFormat=Привід: {0}}" Margin="0 2"/>
                            <TextBlock Text="{Binding NumberOfDoors, StringFormat=Кількість дверей: {0}}" Margin="0 2"/>
                            <TextBlock Text="{Binding BodyTypeString, StringFormat=Тип кузова: {0}}" Margin="0 2"/>
                        </StackPanel>
                    </Border>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
    </ScrollViewer>
</Page>
