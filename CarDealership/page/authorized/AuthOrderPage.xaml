<Page x:Class="CarDealership.page.authorized.AuthOrderPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:enums="clr-namespace:CarDealership.enums"
      Title="Мої покупки">
  <DockPanel Background="#f7f7f7">
    <TextBlock DockPanel.Dock="Top" Margin="12" Text="Мої замовлення" FontSize="18" FontWeight="Bold"/>
    <ScrollViewer VerticalScrollBarVisibility="Auto">
      <ItemsControl x:Name="OrdersList" Margin="8">
        <ItemsControl.Resources>
          <BooleanToVisibilityConverter x:Key="BoolToVisibility" />
        </ItemsControl.Resources>
        <ItemsControl.ItemsPanel>
          <ItemsPanelTemplate>
            <WrapPanel/>
          </ItemsPanelTemplate>
        </ItemsControl.ItemsPanel>
        <ItemsControl.ItemTemplate>
          <DataTemplate>
            <Border BorderBrush="#DDD" BorderThickness="1" CornerRadius="10" Margin="8" Padding="12" Background="#FFFFFF" Width="320">
              <StackPanel>
                <TextBlock FontWeight="Bold" FontSize="16" Text="{Binding Id, StringFormat=Замовлення #{0}}"/>
                <Separator Margin="0,6"/>
                <TextBlock Text="{Binding CarName, StringFormat=Авто: {0}}"/>
                <TextBlock Text="{Binding ProductNumber, StringFormat=Продукт: {0}}"/>
                <TextBlock Text="{Binding Amount, StringFormat=Сума: {0}}"/>
                <TextBlock Text="{Binding PaymentType, StringFormat=Оплата: {0}}"/>
                <TextBlock Text="{Binding Delivery, StringFormat=Доставка: {0}}"/>
                <TextBlock Text="{Binding HasReceiptText, StringFormat=Квитанція: {0}}"/>
                <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                  <Button Content="Причина відхилення" Tag="{Binding ReviewMessage}" Click="Reason_Click">
                    <Button.Style>
                      <Style TargetType="Button">
                        <Setter Property="Visibility" Value="Collapsed"/>
                        <Style.Triggers>
                          <DataTrigger Binding="{Binding ReviewStatus}" Value="{x:Static enums:RequestStatus.Rejected}">
                            <Setter Property="Visibility" Value="Visible"/>
                          </DataTrigger>
                        </Style.Triggers>
                      </Style>
                    </Button.Style>
                  </Button>
                  <Button Content="Сформувати чек" Tag="{Binding Id}" Click="Receipt_Click" Margin="6,0,0,0">
                    <Button.Style>
                      <Style TargetType="Button">
                        <Setter Property="Visibility" Value="Collapsed"/>
                        <Style.Triggers>
                          <DataTrigger Binding="{Binding ReviewStatus}" Value="{x:Static enums:RequestStatus.Approved}">
                            <Setter Property="Visibility" Value="Visible"/>
                          </DataTrigger>
                          <DataTrigger Binding="{Binding HasReceipt}" Value="True">
                            <Setter Property="Visibility" Value="Collapsed"/>
                          </DataTrigger>
                        </Style.Triggers>
                      </Style>
                    </Button.Style>
                  </Button>
                  <Button Content="Переглянути" Tag="{Binding LastReceiptId}" Click="View_Click" Margin="6,0,0,0"
                          Visibility="{Binding HasReceipt, Converter={StaticResource BoolToVisibility}}"/>
                </StackPanel>
              </StackPanel>
            </Border>
          </DataTemplate>
        </ItemsControl.ItemTemplate>
      </ItemsControl>
    </ScrollViewer>
  </DockPanel>
</Page>
