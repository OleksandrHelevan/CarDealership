<Window x:Class="CarDealership.page.authorized.BuyCarDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Купити автомобіль" Height="300" Width="400"
        WindowStartupLocation="CenterOwner">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Деталі покупки" FontSize="18" FontWeight="Bold" Margin="0,0,0,20"/>

        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,10">
            <TextBlock Text="Клієнт ID:" Width="100" VerticalAlignment="Center"/>
            <TextBox x:Name="ClientIdTextBox" Width="200" Text="1"/>
        </StackPanel>

        <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,0,0,10">
            <TextBlock Text="Тип оплати:" Width="100" VerticalAlignment="Center"/>
            <ComboBox x:Name="PaymentTypeComboBox" Width="200">
                <ComboBoxItem Content="Готівка" IsSelected="True"/>
                <ComboBoxItem Content="Кредитна карта"/>
                <ComboBoxItem Content="Банківський переказ"/>
            </ComboBox>
        </StackPanel>

        <StackPanel Grid.Row="3" Orientation="Horizontal" Margin="0,0,0,10">
            <TextBlock Text="Доставка:" Width="100" VerticalAlignment="Center"/>
            <CheckBox x:Name="DeliveryCheckBox" Content="Потрібна доставка" VerticalAlignment="Center"/>
        </StackPanel>

        <StackPanel Grid.Row="4" Orientation="Horizontal" Margin="0,0,0,10">
            <TextBlock Text="Країна:" Width="100" VerticalAlignment="Center"/>
            <TextBox x:Name="CountryTextBox" Width="200" Text="Україна"/>
        </StackPanel>

        <StackPanel Grid.Row="6" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button x:Name="BuyButton" Content="Купити" Width="80" Height="30" Margin="0,0,10,0" Click="BuyButton_Click"/>
            <Button x:Name="CancelButton" Content="Скасувати" Width="80" Height="30" Click="CancelButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
