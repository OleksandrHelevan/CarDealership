<Page x:Class="CarDealership.page.query.GetPriceByBrandPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d"
      Title="BuildInQueryPage">

    <DockPanel Background="#f7f7f7">
        <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Margin="12" VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="Марка:" VerticalAlignment="Center" Margin="0,0,6,0"/>
            <ComboBox x:Name="BrandPicker" Width="220" Height="30" Margin="0,0,16,0"/>

            <Button x:Name="BtnRun"
                    Content="Показати"
                    Height="34" Padding="16,4"
                    Background="#3B82F6" Foreground="White"
                    FontWeight="SemiBold" BorderThickness="0"
                    Click="BtnQuery1_Click"/>
        </StackPanel>

        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="12">
                <!-- Summary section: brand sums and total -->
                <TextBlock Text="Всі" FontSize="18" FontWeight="Bold" Margin="4"/>
                <Border BorderBrush="Gray" BorderThickness="1" CornerRadius="10" Margin="4" Padding="12" Background="#F5F5F5">
                    <StackPanel>
                        <TextBlock Text="Суми продажів за марками" FontSize="18" FontWeight="Bold" Margin="0,0,0,8"/>
                        <ItemsControl x:Name="BrandSumsList">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <DockPanel LastChildFill="False" Margin="0,2">
                                        <TextBlock Text="{Binding Brand}" Width="180"/>
                                        <TextBlock Text="{Binding Count, StringFormat=Кількість: {0}}" Width="120"/>
                                        <TextBlock Text="{Binding Sum, StringFormat=Сума: ${0}}"/>
                                    </DockPanel>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                        <Separator Margin="0,8"/>
                        <TextBlock x:Name="TotalSumText" FontWeight="Bold" Text="Загальна сума: $0"/>
                    </StackPanel>
                </Border>

                <TextBlock Text="Продані моделі обраної марки" FontSize="18" FontWeight="Bold" Margin="4"/>
                <TextBlock x:Name="SelectedSumText" Text="Сума обраної марки: $0" FontWeight="Bold" Margin="4,0,4,8"/>
                <ItemsControl x:Name="ResultsItems">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border BorderBrush="Gray" BorderThickness="1" CornerRadius="10" Margin="10" Padding="15" Background="#F5F5F5" Width="300">
                                <StackPanel>
                                    <TextBlock FontSize="16" FontWeight="Bold" Margin="0 0 0 10"
                                               Text="{Binding Title}"/>
                                    <TextBlock Text="{Binding ProductNumber, StringFormat=№ продукту: {0}}" Margin="0 2"/>
                                    <TextBlock Text="{Binding Year, StringFormat=Рік: {0}}" Margin="0 2"/>
                                    <TextBlock Text="{Binding Price, StringFormat=Ціна: ${0}}" Margin="0 2"/>
                                    <Separator Margin="0,6"/>
                                    <TextBlock Text="{Binding OrderId, StringFormat=Замовлення: {0}}" Margin="0 2"/>
                                    <TextBlock Text="{Binding CreatedAt, StringFormat=Оплачено: {0:yyyy-MM-dd HH:mm}}" Margin="0 2"/>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
        </ScrollViewer>
    </DockPanel>
</Page>
