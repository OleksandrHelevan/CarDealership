<Page x:Class="CarDealership.page.query.ClientsDetailsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d"
      Title="UsersDetailsPage">

    <DockPanel Background="#f7f7f7">
        <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Margin="12" VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="Марка:" VerticalAlignment="Center" Margin="0,0,6,0"/>
            <ComboBox x:Name="BrandPicker" Width="220" Height="30" Margin="0,0,16,0"/>
            <Button x:Name="RunBtn"
                    Content="Показати"
                    Height="34" Padding="16,4"
                    Background="#3B82F6" Foreground="White"
                    FontWeight="SemiBold" BorderThickness="0"
                    Click="RunBtn_Click"/>
        </StackPanel>

        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <TextBlock Text="Всі (групування за маркою)" FontSize="18" FontWeight="Bold" Margin="12,12,12,4"/>
                <Border BorderBrush="Gray" BorderThickness="1" CornerRadius="10" Margin="12,0" Padding="12" Background="#F5F5F5">
                    <ItemsControl x:Name="BrandClientsList">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <DockPanel LastChildFill="False" Margin="0,2">
                                    <TextBlock Text="{Binding Brand}" Width="200"/>
                                    <TextBlock Text="{Binding ClientsCount, StringFormat=Клієнтів: {0}}" Width="140"/>
                                    <TextBlock Text="{Binding OrdersCount, StringFormat=Замовлень: {0}}"/>
                                </DockPanel>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </Border>

                <TextBlock Text="Клієнти вибраної марки" FontSize="18" FontWeight="Bold" Margin="12,12,12,4"/>
                <ItemsControl x:Name="ClientsList" Margin="12">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border BorderBrush="Gray" BorderThickness="1" CornerRadius="10" Margin="10" Padding="15" Background="#F5F5F5" Width="360">
                                <StackPanel>
                                    <TextBlock FontSize="16" FontWeight="Bold" Text="{Binding FullName}"/>
                                    <Separator Margin="0,6"/>
                                    <TextBlock Text="{Binding Login, StringFormat=Логін: {0}}"/>
                                    <TextBlock Text="{Binding Email, StringFormat=Email: {0}}"/>
                                    <TextBlock Text="{Binding AccessRight, StringFormat=Роль: {0}}"/>
                                    <Separator Margin="0,6"/>
                                    <TextBlock Text="{Binding PassportNumber, StringFormat=Паспорт: {0}}"/>
                                    <TextBlock Text="{Binding OrdersCount, StringFormat=К-сть замовлень: {0}}"/>
                                    <TextBlock Text="{Binding LastPaymentAt, StringFormat=Остання оплата: {0:yyyy-MM-dd HH:mm}}"/>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
        </ScrollViewer>
    </DockPanel>
</Page>
