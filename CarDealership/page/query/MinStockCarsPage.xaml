<Page x:Class="CarDealership.page.query.MinStockCarsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d"
      Title="Мінімальний запас">

    <DockPanel Background="#f7f7f7">
        <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Margin="12" VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="Модель:" VerticalAlignment="Center" Margin="0,0,6,0"/>
            <ComboBox x:Name="ModelPicker" Width="260" Height="30" Margin="0,0,12,0"/>
            <Button x:Name="BtnRun" Content="Показати" Height="34" Padding="16,4"
                    Background="#3B82F6" Foreground="White" FontWeight="SemiBold" BorderThickness="0"
                    Click="BtnRun_Click"/>
        </StackPanel>

        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <ItemsControl x:Name="ResultsItems">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border BorderBrush="Gray" BorderThickness="1" CornerRadius="10" Margin="10" Padding="15" Background="#F5F5F5" Width="300">
                            <StackPanel>
                                <TextBlock FontSize="16" FontWeight="Bold" Margin="0 0 0 10" Text="{Binding Title}"/>
                                <TextBlock Text="{Binding ProductNumber, StringFormat=№ продукту: {0}}" Margin="0 2"/>
                                <TextBlock Text="{Binding Amount, StringFormat=Кількість: {0}}" Margin="0 2"/>
                                <TextBlock Text="{Binding AvailableFrom, StringFormat=Доступно з: {0:yyyy-MM-dd}}" Margin="0 2"/>
                                <Separator Margin="0,6"/>
                                <TextBlock Text="{Binding Year, StringFormat=Рік: {0}}" Margin="0 2"/>
                                <TextBlock Text="{Binding Price, StringFormat=Ціна: ${0}}" Margin="0 2"/>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </DockPanel>
</Page>

