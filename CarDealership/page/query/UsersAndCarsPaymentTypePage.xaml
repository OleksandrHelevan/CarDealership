<Page x:Class="CarDealership.page.query.UsersAndCarsPaymentTypePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d"
      Title="UsersAndCarsPaymentTypePage">

    <DockPanel Background="#f7f7f7">
        <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Margin="12" VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="Вид оплати:" VerticalAlignment="Center" Margin="0,0,6,0"/>
            <ComboBox x:Name="PaymentTypePicker" Width="220" Height="30" Margin="0,0,16,0"/>

            <TextBlock Text="Показати:" VerticalAlignment="Center" Margin="0,0,6,0"/>
            <ComboBox x:Name="ShowPicker" Width="160" Height="30" Margin="0,0,16,0"/>

            <Button x:Name="RunBtn"
                    Content="Показати"
                    Height="34" Padding="16,4"
                    Background="#3B82F6" Foreground="White"
                    FontWeight="SemiBold" BorderThickness="0"
                    Click="RunBtn_Click"/>
        </StackPanel>

        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <StackPanel x:Name="ClientsBlock">
                    <TextBlock Text="Клієнти" FontSize="18" FontWeight="Bold" Margin="12,12,12,4"/>
                    <ItemsControl x:Name="ClientsList" Margin="12">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border BorderBrush="Gray" BorderThickness="1" CornerRadius="10" Margin="10" Padding="15" Background="#F5F5F5" Width="360">
                                    <StackPanel>
                                        <TextBlock FontSize="16" FontWeight="Bold" Text="{Binding FullName}"/>
                                        <Separator Margin="0,6"/>
                                        <TextBlock Text="{Binding Login, StringFormat=Логін: {0}}"/>
                                        <TextBlock Text="{Binding Email, StringFormat=Email: {0}}"/>
                                        <TextBlock Text="{Binding AccessRight, StringFormat=Права: {0}}"/>
                                        <Separator Margin="0,6"/>
                                        <TextBlock Text="{Binding OrdersCount, StringFormat=Замовлень: {0}}"/>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>

                <StackPanel x:Name="CarsBlock">
                    <TextBlock Text="Авто" FontSize="18" FontWeight="Bold" Margin="12,12,12,4"/>
                    <ItemsControl x:Name="CarsList" Margin="12">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border BorderBrush="Gray" BorderThickness="1" CornerRadius="10" Margin="10" Padding="15" Background="#F5F5F5" Width="360">
                                    <StackPanel>
                                        <TextBlock FontSize="16" FontWeight="Bold" Text="{Binding CarName}"/>
                                        <Separator Margin="0,6"/>
                                        <TextBlock Text="{Binding Brand, StringFormat=Марка: {0}}"/>
                                        <TextBlock Text="{Binding ModelName, StringFormat=Модель: {0}}"/>
                                        <TextBlock Text="{Binding Price, StringFormat=Ціна: {0:C}}"/>
                                        <Separator Margin="0,6"/>
                                        <TextBlock Text="{Binding OrdersCount, StringFormat=Замовлень: {0}}"/>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>
    </DockPanel>
</Page>
