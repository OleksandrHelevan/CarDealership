<Page x:Class="CarDealership.page.query.BrandsDelayPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d"
      Title="BrandsDelayPage">

    <DockPanel Background="#f7f7f7">
        <TextBlock DockPanel.Dock="Top" Margin="12" Text="Постачальники, які затримують товар" FontSize="18" FontWeight="Bold"/>

        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="12">
                <TextBlock Text="Затримки за марками" FontSize="16" FontWeight="Bold" Margin="4"/>
                <Border BorderBrush="Gray" BorderThickness="1" CornerRadius="10" Margin="4" Padding="12" Background="#F5F5F5">
                    <ItemsControl x:Name="BrandDelaysList">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <DockPanel LastChildFill="False" Margin="0,2">
                                    <TextBlock Text="{Binding Brand}" Width="200"/>
                                    <TextBlock Text="{Binding Count, StringFormat=Кількість: {0}}" Width="130"/>
                                    </DockPanel>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </Border>

                <TextBlock Text="Перелік товарів з простроченою доступністю" FontSize="16" FontWeight="Bold" Margin="4"/>
                <ItemsControl x:Name="DelayedItems">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border BorderBrush="Gray" BorderThickness="1" CornerRadius="10" Margin="10" Padding="15" Background="#F5F5F5" Width="300">
                                <StackPanel>
                                    <TextBlock FontSize="16" FontWeight="Bold" Margin="0 0 0 10"
                                               Text="{Binding Title}"/>
                                    <TextBlock Text="{Binding ProductNumber, StringFormat=№ продукту: {0}}" Margin="0 2"/>
                                    <TextBlock Text="{Binding CountryOfOrigin, StringFormat=Країна: {0}}" Margin="0 2"/>
                                    <TextBlock Text="{Binding AvailableFrom, StringFormat=Мала бути: {0:yyyy-MM-dd}}" Margin="0 2"/>
                                    <TextBlock Text="{Binding InStockText}" Margin="0 2"/>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
        </ScrollViewer>
    </DockPanel>
</Page>

