<Window x:Class="CarDealership.page.operator.PutOnSaleDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Виставити авто" SizeToContent="WidthAndHeight" WindowStartupLocation="CenterOwner">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Номер продукту"/>
        <TextBox Grid.Row="1" x:Name="TbNumber" Width="280"/>

        <TextBlock Grid.Row="2" Text="Країна походження" Margin="0,8,0,0"/>
        <TextBox Grid.Row="3" x:Name="TbCountry" Width="280"/>

        <CheckBox Grid.Row="4" x:Name="CbInStock" Content="В наявності" Margin="0,8,0,0" IsChecked="True"/>

        <StackPanel Grid.Row="5" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,12,0,0">
            <Button Content="Скасувати" Width="100" Margin="0,0,8,0" Click="Cancel_Click"/>
            <Button Content="Зберегти" Width="100" Background="#3B82F6" Foreground="White" Click="Save_Click"/>
        </StackPanel>
    </Grid>
</Window>

