<Page x:Class="CarDealership.page.operator.OrderReviewPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Перевірка замовлень">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Замовлення" FontSize="18" FontWeight="Bold"/>

        <ListView Grid.Row="1" x:Name="OrdersList" Margin="0,8,0,0">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="ID" DisplayMemberBinding="{Binding Id}" Width="60"/>
                    <GridViewColumn Header="Клієнт" DisplayMemberBinding="{Binding ClientName}" Width="140"/>
                    <GridViewColumn Header="Продукт" DisplayMemberBinding="{Binding ProductNumber}" Width="120"/>
                    <GridViewColumn Header="Оплата" DisplayMemberBinding="{Binding PaymentType}" Width="90"/>
                    <GridViewColumn Header="Доставка" DisplayMemberBinding="{Binding Delivery}" Width="70"/>
                    <GridViewColumn Header="Адреса" DisplayMemberBinding="{Binding Address}" Width="160"/>
                    <GridViewColumn Header="Дії" Width="100">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <Button Content="Розглянути" Tag="{Binding Id}" Click="Review_Click"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Page>
