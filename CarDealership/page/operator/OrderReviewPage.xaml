<Page x:Class="CarDealership.page.operator.OrderReviewPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Перевірка замовлень">
  <DockPanel Background="#f7f7f7">
    <TextBlock DockPanel.Dock="Top" Margin="12" Text="Замовлення без відповіді" FontSize="18" FontWeight="Bold"/>
    <ScrollViewer VerticalScrollBarVisibility="Auto">
      <ItemsControl x:Name="OrdersList" Margin="8">
        <ItemsControl.ItemsPanel>
          <ItemsPanelTemplate>
            <WrapPanel/>
          </ItemsPanelTemplate>
        </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border BorderBrush="#DDD" BorderThickness="1" CornerRadius="10" Margin="8" Padding="12" Background="#FFFFFF" Width="300">
                            <StackPanel>
                                <TextBlock FontWeight="Bold" FontSize="16" Text="{Binding Id, StringFormat=Замовлення #{0}}"/>
                                <Separator Margin="0,6"/>
                                <TextBlock Text="{Binding ClientName, StringFormat=Клієнт: {0}}"/>
                                <TextBlock Text="{Binding ProductNumber, StringFormat=Продукт: {0}}"/>
                                <TextBlock Text="{Binding PaymentType, StringFormat=Оплата: {0}}"/>
                                <TextBlock Text="{Binding Delivery, StringFormat=Доставка: {0}}"/>
                                <TextBlock Text="{Binding Address, StringFormat=Адреса: {0}}" TextWrapping="Wrap"/>
                                <Button Content="Розглянути" Margin="0,8,0,0" Tag="{Binding Id}" Click="Review_Click"/>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
      </ItemsControl>
    </ScrollViewer>
  </DockPanel>
</Page>
