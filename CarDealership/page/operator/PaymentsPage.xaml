<Page x:Class="CarDealership.page.operator.PaymentsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Оплачені замовлення">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Оплачені замовлення" FontSize="18" FontWeight="Bold"/>

        <ListView Grid.Row="1" x:Name="PaymentsList" Margin="0,8,0,0">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="ID" DisplayMemberBinding="{Binding Id}" Width="60"/>
                    <GridViewColumn Header="Замовлення" DisplayMemberBinding="{Binding OrderId}" Width="90"/>
                    <GridViewColumn Header="Клієнт" DisplayMemberBinding="{Binding ClientName}" Width="160"/>
                    <GridViewColumn Header="Продукт" DisplayMemberBinding="{Binding ProductNumber}" Width="120"/>
                    <GridViewColumn Header="Авто" DisplayMemberBinding="{Binding CarName}" Width="180"/>
                    <GridViewColumn Header="Сума" DisplayMemberBinding="{Binding Amount}" Width="100"/>
                    <GridViewColumn Header="Створено" DisplayMemberBinding="{Binding CreatedAt}" Width="150"/>
                    <GridViewColumn Header="Дія" Width="190">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <Button Content="Відкрити" Tag="{Binding Id}" Click="Open_Click"/>
                                    <Button Content="Зберегти" Tag="{Binding Id}" Click="Save_Click"/>
                                </StackPanel>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Page>

