<Page x:Class="CarDealership.page.operator.UnboundCarsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:model="clr-namespace:CarDealership.dto"
      Title="UnboundCarsPage">

    <DockPanel Background="#f7f7f7">
        <TextBlock DockPanel.Dock="Top" Text="Автомобілі без продукту" FontSize="20" FontWeight="Bold" Margin="10"/>

        <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalAlignment="Center">
            <ItemsControl x:Name="UnboundCarsList">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>

                <ItemsControl.ItemTemplate>
                    <DataTemplate DataType="{x:Type model:Vehicle}">
                        <Border BorderBrush="Gray" BorderThickness="1" CornerRadius="10" Margin="10" Padding="15" Background="#F5F5F5" Width="320">
                            <StackPanel>
                                <TextBlock Text="{Binding VehicleTypeName}" 
                                           FontWeight="Bold" FontSize="14" Foreground="#2563EB" Margin="0,0,0,5"/>

                                <TextBlock Text="{Binding Brand, StringFormat=Марка: {0}}"/>
                                <TextBlock Text="{Binding ModelName, StringFormat=Модель: {0}}"/>
                                <TextBlock Text="{Binding Year, StringFormat=Рік: {0}}"/>
                                <TextBlock Text="{Binding Price, StringFormat=Ціна: ${0}}"/>
                                <Button Content="Виставити" Margin="0,10,0,0" Background="#3B82F6" Foreground="White" Click="PutOnSale_Click"/>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </DockPanel>
</Page>
