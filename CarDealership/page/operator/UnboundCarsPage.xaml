<Page x:Class="CarDealership.page.operator.UnboundCarsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      mc:Ignorable="d"
      Title="UnboundCarsPage">

    <DockPanel Background="#f7f7f7">
        <TextBlock DockPanel.Dock="Top"
                   Text="Авто без продукту"
                   FontSize="24" FontWeight="Bold"
                   HorizontalAlignment="Center" Margin="20"/>

        <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
            <ItemsControl x:Name="CarsList">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>

                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border BorderBrush="#ddd" BorderThickness="1" CornerRadius="10" Margin="10" Padding="15" Background="#FFFFFF" Width="320">
                            <StackPanel>
                                <TextBlock Text="{Binding Brand}" FontSize="16" FontWeight="Bold"/>
                                <TextBlock Text="{Binding ModelName}"/>
                                <TextBlock Text="{Binding Year, StringFormat=Рік: {0}}"/>
                                <TextBlock Text="{Binding Price, StringFormat=Ціна: ${0}}"/>
                                <TextBlock Text="{Binding Mileage, StringFormat=Пробіг: {0} км}"/>

                                <Button Content="Виставити на продаж"
                                        Margin="0,10,0,0"
                                        Background="#3B82F6" Foreground="White"
                                        Click="PutOnSale_Click"/>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </DockPanel>
</Page>

