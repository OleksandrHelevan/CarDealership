<Window x:Class="CarDealership.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login"
        WindowState="Maximized"
        WindowStyle="SingleBorderWindow"
        ResizeMode="CanResize"
        Background="#f0f2f5"
        FontFamily="Segoe UI"
        FontSize="16">
    <Grid>
        <Border Width="400"
                Padding="30"
                Background="White"
                CornerRadius="10"
                VerticalAlignment="Center"
                HorizontalAlignment="Center">
            <Border.Effect>
                <DropShadowEffect Color="Black" Opacity="0.3" BlurRadius="10" ShadowDepth="4"/>
            </Border.Effect>

            <StackPanel>
                <TextBlock Text="Welcome to Car Dealership"
                           FontSize="22"
                           FontWeight="Bold"
                           Margin="0 0 0 20"
                           TextAlignment="Center"/>

                <TextBlock Text="Username" Margin="0 0 0 5"/>
                <TextBox x:Name="UsernameTextBox"
                         Height="35"
                         Margin="0 0 0 15"
                         Padding="5"/>

                <TextBlock Text="Password" Margin="0 0 0 5"/>
                <PasswordBox x:Name="PasswordBox"
                             Height="35"
                             Margin="0 0 0 20"
                             Padding="5"/>

                <Button Content="Login"
                        Click="Login_Click"
                        Height="40"
                        Background="#0078D7"
                        Foreground="White"
                        FontWeight="Bold"
                        IsDefault="True"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>