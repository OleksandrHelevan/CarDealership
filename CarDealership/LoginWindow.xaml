<Window x:Class="CarDealership.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login / Register"
        Height="300" Width="400"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="10" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="10" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="20" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        
        <TextBlock Text="Login" Grid.Row="0" FontWeight="SemiBold" Margin="0,0,0,5" />
        
        <TextBox x:Name="UsernameTextBox"
                 Grid.Row="1"
                 Height="30"
                 Margin="0,0,0,10" />

        <TextBlock Text="Password" Grid.Row="3" FontWeight="SemiBold" Margin="0,0,0,5" />

        <PasswordBox x:Name="PasswordBox"
                     Grid.Row="4"
                     Height="30"
                     Margin="0,0,0,10" />
        
        <ComboBox x:Name="AccessComboBox"
                  Grid.Row="6"
                  Height="30"
                  SelectedIndex="0">
            <ComboBoxItem Content="Guest" />
            <ComboBoxItem Content="Authorized" />
            <ComboBoxItem Content="Operator" />
            <ComboBoxItem Content="Admin" />
        </ComboBox>

        <StackPanel Grid.Row="8" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
            <Button Content="Login"
                    Click="Login_Click"
                    Width="100" Margin="10" />
            <Button Content="Register"
                    Click="Register_Click"
                    Width="100" Margin="10" />
        </StackPanel>
    </Grid>
</Window>